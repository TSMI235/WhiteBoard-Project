<!DOCTYPE html>
<%= devise_error_messages! %>
<!--header for bootstrap and css links-->
<h2>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Log In</title>
  <link rel = "stylesheet" href="app/assets/stylesheets/bootstrap.min.css" />
  <link rel = "stylesheet" type="text/css" href="app/assets/stylesheets/login.css"/>
</h2>
<!--bootstrap html for page layout-->
<body class="bg">
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-sm-4 col-xs-12"></div>
     <div class="col-md-4 col-sm-4 col-xs-12">
       <!--form html for user input-->
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-container"}) do |f| %>
          <h3>Log In</h3>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:'email-address' %>
          </div>

          <div class="password">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:'form-control',placeholder:'password' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="remember">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <!--end form html-->
          <div class="form-group">
            <%= f.submit "Log In", class:'btn btn-warning btn-block' %>
          </div>

          <div class="devise-links">
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    <div class="col-md-4 col-sm-4 col-xs-12"></div>
  </div>
</div>
</body>
<!--end layout html-->
  <script src="/assets/javascripts/jquery.min.js"></script>
  <script src="/assets/javascripts/bootstrap.min.js"></script>
</html>
